---
import Base from '@/layouts/Base.astro';
import Header from '@/components/Header.svelte';
import Footer from '@/components/Footer.astro';
import type { SiteLayout } from '@/lib/types/site';
import { setSanityPictureDefaults } from 'astro-sanity-picture';
import { imageBuilder } from '@/lib/helpers';
// import { Debug } from 'astro/components';

type Props = SiteLayout;
const { site, seo } = Astro.props;
const { header, footer } = site;

setSanityPictureDefaults({ imageUrlBuilder: imageBuilder });
---

<Base favicon={site.seo.favicon} seo={seo}>
  <Header
    logo={header.logo}
    navMenus={header.navMenus}
    slot="header"
    client:load
  />
  <slot />
  <Footer slot="footer" {...footer} />
</Base>
