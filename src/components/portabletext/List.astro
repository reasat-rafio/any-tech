---
import type { ListProps } from "astro-portabletext/components";
const { node } = Astro.props;
export type Props = ListProps;

const elementMap: { [key: string]: string } = {
  menu: "menu",
  number: "ol",
  primaryBullet: "ul",
};
const Element = elementMap[node.listItem] ?? "ul";
---

<Element
  class:list={[
    node.listItem === "bullet" && "list-disc ml-[3em] mb-[1.5em]",
    node.listItem === "number" && "list-decimal ml-[1.5em]",
  ]}
  ><slot></slot>
</Element>
